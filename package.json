{
  "name": "typescript-universe-node-starter",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Chadwick Maycumber <chad.maycumber11@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "eslint": "eslint --ext *.ts",
    "format": "prettier --write **/*.ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-universe": "^6.0.1",
    "husky": "^4.3.5",
    "jest": "^26.4.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~4.1.3"
  },
  "dependencies": {
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn tsc && yarn eslint"
    }
  },
  "eslintConfig": {
    "extends": [
      "universe/node",
      "universe/shared/typescript-analysis"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx",
          "*.d.ts"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      }
    ]
  }
}
